<h1>Edit Profile</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.text_field :password %>

	<%= f.label :password_confirmation %>
	<%= f.text_field :password_confirmation %>

	<%= f.label :avatar %>
	<%= f.file_field :avatar %>

	<%= f.submit "save changes" %>
<% end %>